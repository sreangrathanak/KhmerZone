<%if params[:controller]=="users" && params[:action]=="index"%>
  <%= form_tag users_path,class: 'navbar-form', role: 'search', :method => :get do %>       
        <div class="input-group">
          <%= text_field_tag :search, params[:search],
          {class:"form-control", 
            placeholder:"Search Shop"} %>
            <div class="input-group-btn">              
              <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>              
            </div>            
        </div>        
      <%end %>
<%elsif params[:controller]=="users" && params[:action]=="show"%>
  <%= form_tag user_path(@user),class: 'navbar-form', role: 'search', :method => :get do %>       
        <div class="input-group">
          <%= text_field_tag :search, params[:search],
          {class:"form-control", 
            placeholder:"Search Product in Shop"} %>
            <%#=hidden_field_tag :user_id, params[:id]%>
            <div class="input-group-btn">              
              <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>              
            </div>            
        </div>        
      <%end %>
<%else%>
  <%= form_tag product_search_path,class: 'navbar-form', role: 'search', 
    :method => :get do %>       
        <div class="input-group">
          <%= text_field_tag :search, params[:search],
          {class:"form-control", 
            placeholder:"Search Product"} %>          
            <div class="input-group-btn">              
              <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>              
            </div>            
        </div>
        <%= link_to "Advance",advance_search_form_path%>
      <%end %>
<%end%>