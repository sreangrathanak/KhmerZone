 <div class="modal fade" id="userMessageModal" tabindex="-1" role="dialog" aria-labelledby="approvalModalLabel" aria-hidden="true">

  <div class="modal-dialog">
    <div class="modal-content">      
      <div class="modal-body">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <ul class="nav nav-tabs" id="myTab">
          <li role="presentation" id ="recive" class="active"><a href="#" id="btn-user-recive-sms">My Message
            <sup class="text-danger">
              <b>
                <%=current_user.recive_messages_unread.count if current_user.recive_messages_unread.count >0%>
              </b>
            </sup>
            (<%=current_user.recive_messages.count%>)
            </a>
          </li>
          <li role="presentation" id ="send"><a href="#" id="btn-user-send-sms">
          Send(<%=current_user.send_messages.count%>)</a></li>
          <li role="presentation" id ="new"><a href="#" id="btn-user-new-sms">
          New Message</a></li>
        </ul>

        <div id="new_message">
          <%= render "shared/user_new_message"%>
        </div>
        
        <div id= "send_message">
          <%= render "shared/user_send_message"%>          
        </div>

        <div id= "recive_message">
          <%= render "shared/user_recive_message"%>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $("#new_message").hide();
  $("#send_message").hide();
  $('#myTab a').click(function (e) {
    e.preventDefault();
    $(this).tab('show');
  })
  $("#btn-user-new-sms").click(function(){
    $("#new_message").show();
    $("#send_message").hide();
    $("#recive_message").hide();
  });
  $("#btn-user-send-sms").click(function(){
    $("#new_message").hide();
    $("#send_message").show();
    $("#recive_message").hide();
  });
  $("#btn-user-recive-sms").click(function(){
    $("#new_message").hide();
    $("#send_message").hide();
    $("#recive_message").show();
  });
</script>