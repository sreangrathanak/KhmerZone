<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-10">
    <div class="col-md-4">
    <h1>Advance Search</h1>
    <%= form_tag advance_search_path,class:"",role: 'search', 
    :method => :get do %> 
      <div class="field">
        <%= label_tag :keywords,"Keyword"%><br/>
        <%= text_field_tag :keywords, nil,
          {class:"form-control", 
            placeholder:"keyword"} %>
      </div>
      <div class="field">
        <%Category.all.each do |category|%>
                <%= check_box_tag "product[category_ids][]",category.id,
                false,id: "product-#{dom_id(category)}"%>
                <%= label_tag "product-#{dom_id(category)}",category.name%>
              <%end%>
      </div>
      <div class="field">
        <%= label_tag :min_price,"Price Range"%><br/>
        <%= text_field_tag :min_price,nil,size:10%>
        <%= text_field_tag :max_price,nil,size:10%>
      </div>
      <div class="action"><%= submit_tag "Search"%></div>
    <%end%>
    </div>
  </div>  
</div>