<%if @user.images.size>1%>  
  <div id="cover_slide" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
    <%n=0%>
    <%@user.images.each do |image|%>
      <li data-target="#cover_slide" data-slide-to="<%=n%>" class="<%=n!=0 ? "" : "active"%>">
      </li>            
      <%n=n+1%>
    <%end%>
    </ol>
    <div class="carousel-inner">
      <%n=0%>
      <%@user.images.each do |image|%>              
        <div class="item <%=n!=1 ? "" : "active"%>">                
          <%=user_image_cover(image,size:"800X300")%>
        </div>
        <%n=n+1%>              
      <%end%>            
    </div>
              
    <a class="left carousel-control" href="#cover_slide" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="right carousel-control" href="#cover_slide" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
  </div>
<%else%>
  <%=user_image_cover(@user.images.first,size:"800X300")%>
<%end%>