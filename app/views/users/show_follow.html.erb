<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">      
      <%=link_to image_tag(@user.image? ? @user.image.url : 
              "profile_default.png",class:"user_big_image img-thumbnail"),@user%>
      <h1><%= @user.name %></h1>      
      <span><b>Post</b> <%= @user.products.count %> products</span>
    </section>
    <section class="">
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="">
          <% @users.each do |user| %>            
            <%= link_to image_tag(user.image? ? user.image.url : 
              "profile_default.png",class:"user_follow_image img-circle"),user%>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>