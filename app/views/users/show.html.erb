<% provide :title, "Users" %> 
    <div class="">    
      <div>  
      <%= render "cover_slide"%>
      </div>
        <div class="pull-right">
          <%= render "follow_form" if user_signed_in? %>          
        </div>
      <div class="row">
        <div class="col-md-9">
          <div class="row">
            <% if @products.any? %>            
              <div class="">
                <%unless params[:search].blank?%>
                  <h3>Search Result</h3>
                <%end%>
                <%= render @products %>
              </div>
              <%= will_paginate @products %>
            <% end %>
          </div>
        </div>
        <div class="col-md-3">
          Suggest Shop
        </div>      
    </div>
  </div>
<script type="text/javascript">
    $('.carousel').carousel({
        interval: 5000 //changes the speed
    })
</script>