<% provide :title, "Sign In" %>

<div class="col-md-4 col-md-offset-4">
  <h1 class="page-header">Sign In</h1>
  <br />
  <%= form_for :session, url: sessions_path, html: { class: "form" } do |f| %>
    <div class="form-group"><%= f.label :name %>
    <%= f.text_field :name, autofocus: true, class: "form-control" %></div>
    
    <div class="form-group"><%= f.label :password %>
    <%= f.password_field :password, class: "form-control" %></div>
    
    <div class="checkbox"><label>
      <%= f.check_box :remember_me %> Remember me
    </label></div>

    <div><%= f.submit "Sign In", class: "btn btn-primary form-control" %></div>
  <% end %>
</div>