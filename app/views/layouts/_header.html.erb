<header class = "navbar navbar-fixed-top navbar-inverse">
<div class="row">
  <div class="col-xs-8 col-md-6">
<div class = "left_head">
    <%if user_signed_in?%>
      <%= link_to raw('<div class="glyphicon glyphicon-home btn-lg my-btn"></div>Home'),root_path%>
      <%= link_to raw('<div class="glyphicon glyphicon-bullhorn btn-lg my-btn"></div>Notification'),"#"%>
      <%= link_to raw('<div class="glyphicon glyphicon-envelope btn-lg my-btn"></div>Message'),"#",:data=>{target:"#userMessageModal",toggle:"modal"}%>
      <%= link_to raw('<div class="glyphicon glyphicon-shopping-cart btn-lg my-btn"></div>Shops'),users_path%>
    <%else%>
      <%= link_to raw('<div class="glyphicon glyphicon-home btn-lg my-btn"></div>Home'),root_path%>
      <%= link_to raw('<div class="glyphicon glyphicon-shopping-cart btn-lg my-btn"></div>Shops'),users_path%>
    <%end%>    
  </div> 
</div>
<div class="col-xs-6 col-md-4">
  <div class="pull-right">
      <form class="navbar-form" role="search">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Search" name="q">
            <div class="input-group-btn">
              <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
            </div>
          </div>
      </form>
  </div>
</div>
<div class="col-xs-4 col-md-2">
  <div class = "right_head">    
      <%if user_signed_in?%>      
        <div class="dropdown">          
            <%= link_to image_tag(current_user.image? ? current_user.image.url : 
              "profile_default.png",class:"user_small_image img-circle"),
             "#",class:"dropdown-toggle",:data => {:toggle=>"dropdown"} %>          
          <ul class="dropdown-menu">
            <li><%= link_to "#{current_user.name} profile", current_user %></li>        
            <li><%= link_to "Settings", edit_user_path(current_user) %></li>
            <li class="divider"></li>
            <li>
              <%= link_to "Sign out", signout_path%>
            </li>
          </ul>
          <%=link_to "PostPro",new_product_path,class: "btn btn-success",
                    :data=>{target:"#productModal",toggle:"modal"}%>          
        </div>
      <%else%>
        <div class="btn">
          <%= link_to "Sign In",signin_path,class:""%>
          <%= link_to "|  Sign Up",signup_path,class:""%>
        </div>
      <%end%>
  </div>
  </div> 
</div>
</header>