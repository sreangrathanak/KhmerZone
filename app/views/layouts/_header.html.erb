        <%if user_signed_in?%>
          <li>
            <%= link_to raw('<div class="glyphicon glyphicon-home 
            my-btn"><b class="hidden-sm hidden-md">Home</b></div>'),root_path%>
          </li>
          <li>
          <%= render "layouts/user_notifications"%>
          </li>
          <li><%= render "layouts/user_message_notice_header"%></li>
